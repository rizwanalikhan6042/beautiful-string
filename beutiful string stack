#include <bits/stdc++.h>
  using namespace std;
  
  int main()
  {
    //write your code here
    
      string str;
      cin>>str;
     int o=0;
      while(str[o]!='-'){
        int a=0;
        o=o+1;
      int count=0,count1=0,x=0;
      stack <char> st;
      int i=0; int j=0;
      for(i=0;i<str.length();i++){
        if(str[i]=='}'&&!st.empty()){
          if(st.top()=='{'){
          st.pop();
            a-=1;count-=1;
          }
          else{
        st.push(str[i]);count1+=1;a-=1;
        }
          
        }
        else if(str[i]=='}'&&st.empty()) {
          st.push(str[i]);count1+=1;a+=1;
        }
        else{
          st.push(str[i]);count+=1;
        }
      }
     x=ceil(count/2.0)+ceil(count1/2.0);
   
    
    cout<<o<<'.'<<"  "<<x<<'\n';
    cin>>str;
    if(str[0]=='-')
    return 0;
      }
    
  }
